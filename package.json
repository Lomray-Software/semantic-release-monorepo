{
  "name": "@lomray/semantic-release-monorepo",
  "version": "1.0.1",
  "description": "Plugins for `semantic-release` allowing it to be used with a monorepo.",
  "type": "module",
  "main": "src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.cjs .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{ts,js,jsx,css,cjs,json}\"",
    "prettier:fix": "prettier \"**/*.{ts,js,jsx,css,cjs,json}\" --write",
    "test": "jest"
  },
  "license": "MIT",
  "peerDependencies": {
    "semantic-release": ">=15.11.x"
  },
  "dependencies": {
    "@w4rlock/semantic-release-plugin-decorators": "^1.0.3",
    "debug": "^3.2.7",
    "execa": "^0.8.0",
    "file-url": "^3.0.0",
    "fs-extra": "^10.0.1",
    "get-stream": "^6.0.1",
    "git-log-parser": "^1.2.0",
    "minipass": "^3.3.6",
    "p-each-series": "^2.2.0",
    "p-limit": "^1.3.0",
    "pkg-up": "^2.0.0",
    "ramda": "^0.25.0",
    "read-pkg": "^5.2.0",
    "tempy": "1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.5.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "semantic-release-github-pr": "^6.0.1",
    "shelljs": "^0.8.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:fix"
    ]
  }
}
